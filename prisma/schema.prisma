generator client {
    provider = "prisma-client-js"
    previewFeatures = ["multiSchema"]
    
}

datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    directUrl         = env("DIRECT_URL")
    schemas           = ["public", "auth"]
}


enum Gender {
    male
    female
    @@schema("auth")
}

enum AuthType {
    email
    google
    apple
    @@schema("auth")
}

model User {
    id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    email String @unique
    provider AuthType @default(email)
    created_at DateTime?
    updated_at DateTime?
    name String
    gender Gender?
    @@schema("auth")
}